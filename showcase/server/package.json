{
  "name": "robot-viewer-server",
  "version": "1.0.0",
  "description": "Voice-controlled 3D robot viewer backend",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "build:full": "cd ../client && npm run build && cd ../server && node -e \"require('fs').cpSync('../client/dist', 'public', {recursive: true})\" && npm run build",
    "prestart": "npm run build",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "axios": "^1.13.4",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "form-data": "^4.0.5",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
